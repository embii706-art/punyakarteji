rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    

    function getUserData() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data : null;
    }

    function hasRole(role) {
      return isAuthenticated() && getUserData() != null && getUserData().role == role;
    }

    function isSuperAdmin() {
      return hasRole('super_admin');
    }

    function isAdmin() {
      return isSuperAdmin() || hasRole('ketua') || hasRole('wakil_ketua');
    }

    function isBendahara() {
      return hasRole('bendahara');
    }

    function isActive() {
      return isAuthenticated() && getUserData() != null && getUserData().isActive == true;
    }

    // Users collection
    match /users/{userId} {
      // Valid roles
      function isValidRole(role) {
        return role in [
          'super_admin', 'ketua', 'wakil_ketua', 'bendahara', 'sekretaris', 'humas', 'anggota'
        ];
      }

      // Anyone authenticated can read their own profile
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());

      // User pertama: hanya bisa super_admin
      allow create: if (
        !exists(/databases/$(database)/documents/users/$(userId)) &&
        get(/databases/$(database)/documents/users).size() == 0 &&
        request.resource.data.role == 'super_admin' && isValidRole(request.resource.data.role)
      ) || (
        // User berikutnya: siapa saja bisa register, role harus anggota
        !exists(/databases/$(database)/documents/users/$(userId)) &&
        get(/databases/$(database)/documents/users).size() > 0 &&
        request.resource.data.role == 'anggota' && isValidRole(request.resource.data.role)
      ) || (
        // Admin (super_admin, ketua, wakil_ketua) bisa create user dengan role apapun
        (isSuperAdmin() || hasRole('ketua') || hasRole('wakil_ketua')) && isValidRole(request.resource.data.role)
      );

      // Users can update their own profile (kecuali field role), role hanya bisa diubah oleh super_admin, ketua, wakil_ketua
      allow update: if isAuthenticated() && (
        (
          request.auth.uid == userId &&
          request.resource.data.role == resource.data.role &&
          request.resource.data.isActive == resource.data.isActive
        ) ||
        (
          (isSuperAdmin() || hasRole('ketua') || hasRole('wakil_ketua')) && isValidRole(request.resource.data.role)
        )
      );

      // Only super admin can delete users
      allow delete: if isSuperAdmin();
    }

    // Waste Deposits collection (Bank Sampah)
    match /waste_deposits/{depositId} {
      // Anyone authenticated can read
      allow read: if isAuthenticated() && isActive();
      
      // Users with bank_sampah permission can create
      allow create: if isAuthenticated() && isActive();
      
      // Only creator or admin can update/delete
      allow update, delete: if isAuthenticated() && isActive() && 
        (request.auth.uid == resource.data.createdBy || isAdmin());
    }

    // Transactions collection (Finance)
    match /transactions/{transactionId} {
      // Anyone authenticated can read
      allow read: if isAuthenticated() && isActive();
      
      // Bendahara and admins can create
      allow create: if isAuthenticated() && isActive() && (isBendahara() || isAdmin());
      
      // Only bendahara can update pending transactions
      // Ketua/Wakil can approve transactions
      allow update: if isAuthenticated() && isActive() && (
        (isBendahara() && resource.data.status == 'pending') ||
        (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'approvedBy', 'approvedAt']))
      );
      
      // Only super admin can delete
      allow delete: if isSuperAdmin();
    }

    // UMKM collection
    match /umkm/{umkmId} {
      // Everyone can read (for public catalog)
      allow read: if true;
      
      // Authenticated users with umkm permission can create
      allow create: if isAuthenticated() && isActive();
      
      // Creator or admin can update/delete
      allow update, delete: if isAuthenticated() && isActive() && 
        (request.auth.uid == resource.data.createdBy || isAdmin());
    }

    // Payments collection
    match /payments/{paymentId} {
      // Users can read their own payments, admins can read all
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        isAdmin() || 
        isBendahara()
      );
      
      // Anyone authenticated can create payment
      allow create: if isAuthenticated();
      
      // Only system (via webhook) or admin can update payment status
      allow update: if isAdmin() || isBendahara();
      
      // Only super admin can delete
      allow delete: if isSuperAdmin();
    }

    // Activities log collection
    match /activities/{activityId} {
      // Anyone authenticated can read
      allow read: if isAuthenticated() && isActive();
      
      // Only system can create activities
      allow create: if isAuthenticated();
      
      // No updates or deletes allowed
      allow update, delete: if false;
    }

    // Aspirations collection
    match /aspirations/{aspirationId} {
      // Anyone authenticated can read their own aspirations
      // Admins (ketua, wakil, sekretaris) can read all
      allow read: if isAuthenticated() && isActive() && (
        resource.data.userId == request.auth.uid || isAdmin() || hasRole('sekretaris')
      );
      
      // Any authenticated user can create aspirations
      allow create: if isAuthenticated() && isActive() && 
        request.resource.data.userId == request.auth.uid;
      
      // Only admins and sekretaris can update aspirations (to change status)
      allow update: if isAuthenticated() && (isAdmin() || hasRole('sekretaris')) &&
        request.resource.data.userId == resource.data.userId;
      
      // Only super admin can delete aspirations
      allow delete: if isSuperAdmin();
    }
  }
}
